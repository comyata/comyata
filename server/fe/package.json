{
    "name": "@comyata/file-server",
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "cp-packages-json": "cp package.json build && cp package-lock.json build",
        "start-dev": "concurrently --kill-others \"npm:watch-server\"",
        "start": "node --no-deprecation --unhandled-rejections=strict server.js",
        "predev": "npm run clean && npm run dev-build-init",
        "watch-server": "cross-env PORT=8081 NODE_ENV=development NODE_OPTIONS=\"--experimental-vm-modules --unhandled-rejections=strict --import ./ts-node.register.mjs\" nodemon -w ./src ./src/server.ts",
        "lint": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --unhandled-rejections=strict\" eslint -c=.eslintrc 'src/**/*.ts'",
        "tsc": "tsc --project tsconfig.json --noEmit",
        "prebuild": "npm run lint",
        "build": "tsc --project tsconfig.json",
        "test": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --unhandled-rejections=strict\" jest --passWithNoTests",
        "tdd": "cross-env NODE_ENV=development npm test -- --watchAll --watchman --coverage=false",
        "clean": "rimraf build"
    },
    "dependencies": {
        "@comyata/fe": "0.0.1",
        "@comyata/run": "0.0.1",
        "chokidar": "^3.6.0",
        "csv-parse": "^5.5.6",
        "express": "^4.21.0",
        "liquidjs": "^10.16.7",
        "redis": "^4.7.0",
        "yaml": "^2.5.1",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "nodemon": "^3.1.4",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2"
    },
    "nodemonConfig": {
        "ignore": [
            "**/node_modules/**"
        ],
        "ext": "js,ts,tsx,jsx,json",
        "delay": 120,
        "signal": "SIGTERM"
    }
}
