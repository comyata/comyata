{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "outDir": "dist"
    },
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "NodeNext",
            "esModuleInterop": true
        },
        "esm": true
    }
}
